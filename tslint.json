{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest"
    ],
    "jsRules": {
        "object-literal-sort-keys": [
            false
        ],
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": [
            true,
            {
                "objects": "always",
                "arrays": "always",
                "functions": "never",
                "typeLiterals": "always"
            }
        ]
    },
    "rules": {
        "object-literal-sort-keys": [
            false
        ],
        "no-console": false,
        "variable-name": [
            true,
            "allow-leading-underscore",
            "allow-pascal-case",
            "ban-keywords",
            "check-format"
        ],
        "max-classes-per-file": false,
        "interface-over-type-literal": false,
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "always",
                    "typeLiterals": "ignore"
                },
                "singleline": "never"
            }
        ],
        "ordered-imports": false
    },
    "rulesDirectory": []
}